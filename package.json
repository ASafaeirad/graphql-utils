  "license": "MIT",
  "private": true,
  "author": "frontendmonster <frontendmonster@gmail.com>",
  "description": "Useful utilities for create graphql server and client",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frontendmonster/graphql-utils.git"
  },
  "main": "index.js",
  "scripts": {
